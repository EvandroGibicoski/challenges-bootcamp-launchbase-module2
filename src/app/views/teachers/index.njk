{% extends "layout.njk" %}

{% block content %}
    <div class="card table-container">

        <div class="header">
                <a class="button" href="/teachers/create">Novo</a>
            <form action="/teachers" method="GET">
                <input 
                    type="text"
                    name="filter"
                    placeholder="Nome ou Àrea de Atuação"
                    value={{filter}}
                >
                <button type="submit">Filtrar</button>
            </form>
        
         </div>

        <table width="100%">
            <thead>
                <tr>
                    <th>Professor</th>
                    <th>Área de Atuação</th>
                    <th>Estudantes</th>
                    <th>Ação</th>
                </tr>
            </thead>  
            <tbody>
            {% for teacher in teachers %}
                    <tr>
                        <td>
                        <span style="background-image: url({{teacher.avatar_url}})"></span>
                        {{teacher.name}}</td>
                        <td>{{teacher.subject_taught}}</td>
                        <td>{{teacher.total_students}}</td>
                        <td><a href="http:/teachers/{{teacher.id}}">Ver</a></td>
                    </tr>
             {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock content %}