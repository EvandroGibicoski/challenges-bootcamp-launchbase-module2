{% extends "layout.njk" %}

 {% block head %} <link rel="stylesheet" href="/style.css">  {% endblock head %} 

{% block content %}
    <div class="card table-container">
        <a href="/teachers/create">Novo Professor</a>
        <table width="100%">
            <thead>
                <tr>
                    <th>Professor</th>
                    <th>Área de Atuação</th>
                    <th>Ação</th>
                </tr>
            </thead>  
            <tbody>
            {% for teacher in teachers %}
                    <tr>
                        <td>
                        <span style="background-image: url({{teacher.avatar_url}})"></span>
                        {{teacher.name}}</td>
                        <td>{{teacher.services}}</td>
                        <td><a href="http:/teachers/{{teacher.id}}">Ver</a></td>
                    </tr>
             {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock content %}