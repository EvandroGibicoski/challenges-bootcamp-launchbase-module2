        <section 
        class="avatar"
        style="background: url({{student.avatar_url}}/300x400) no-repeat center center / cover ">
        </section>

        <section class="details">
            <h3>Detalhes</h3>

            <div class="item">
                <div>Nome</div>
                <div>{{student.name}}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{student.birth}}</div>
            </div>

            <div class="item">
                <div>Email</div>
                <div>{{student.email}}</div>
            </div>
            <div class="item">
                <div>Ano Escolar</div>
                <div>{{student.scholarity}}</div>
            </div>
            <div class="item">
                <div>Carga Hor√°ria Semanal</div>
                <div>{{student.duration_class}}</div>
            <div>
            <div class="item">
                <div>Aluno(a) de </div>
                <div>{{student.teacher_name}}</div>
            <div>
           
            <a href="/students/{{student.id}}/edit"><button type="submit">Editar</button></a>
        </section>
    </div>
    
{% endblock content %}